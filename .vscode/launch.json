{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Go REST Starter",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/app/main.go",
            "env": {
                "CONFIG_PATH": "configs/config.yaml"
            },
            "args": []
        },
        {
            "name": "Debug with Custom Config",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/app/main.go",
            "env": {
                "APP_LOG_LEVEL": "debug",
                "APP_SERVER_PORT": "7001"
            },
            "args": []
        }
    ]
}